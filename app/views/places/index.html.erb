<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
    <li data-target="#carousel-example-generic" data-slide-to="3"></li>
    <li data-target="#carousel-example-generic" data-slide-to="4"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
    <div class="item active">
      <%= image_tag 'stage_16x9cropped_ps-low.jpg', :class => 'img-responsive' %>
      <div class="carousel-caption">
        Find the best
      </div>
    </div>
    <div class="item">
      <%= image_tag 'player_16x9cropped_ps-low.jpg', :class => 'img-responsive' %>
      <div class="carousel-caption">
        Play them all
      </div>
    </div>
  	<div class="item">
      <%= image_tag 'classical_16x9cropped_ps-low.jpg', :class => 'img-responsive' %>
      <div class="carousel-caption">
        Classical everywhere
      </div>
     </div> 
   	<div class="item">
      <%= image_tag 'amp_16x9cropped_ps-low.jpg', :class => 'img-responsive' %>
      <div class="carousel-caption">
        Only set to eleven
      </div>
    </div>
    <div class="item">
      <%= image_tag 'electric_16x9cropped_ps-low.jpg', :class => 'img-responsive' %>
      <div class="carousel-caption">
        Electric 
      </div>
    </div>
  </div> 

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<section class="container">
	<% @places.each do |place| %>

		<section class="booyah-box col-xs-10 col-xs-offset-1">
			<h1><%= link_to place.name, place_path(place)  %></h1>
			<em><%= place.address %></em><br><br>
			<p><%= place.description %></p><br>

			<% if place.user.present? %>
				<small><%= place.user.email %></small>
			<% end %>

			<% if place.comments.present? %>
				<article class="col-xs-12">
					<blockquote>
						<% if place.comments.last.humanized_rating.present? %>
								<strong><%= place.comments.last.humanized_rating %></strong> -
							<% end %>
							<%= place.comments.last.message %>
							<small><%= place.comments.last.user.email %></small>
					</blockquote>
				</article>
			<% end %>

			<% if place.photos.present? && place.photos.last.picture.present? %>
				<article class="col-xs-12">
						<%= image_tag place.photos.last.picture, :class => 'img-responsive' %>	
				</article>
			<% end %>
		</section>

	<% end %>
</section>

<!-- kaminari pagination --> 
<nav class="container">
	<section class="col-xs-10">
	</section>	
	<section class="col-xs-2">
		<%=  paginate @places %>
	</section>
</nav>